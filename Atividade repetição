      "source": [
        "def mostrar_menu():\n",
        "    print(\"Menu de opções:\")\n",
        "    print(\"1 - Cadastrar novo usuário\")\n",
        "    print(\"2 - Listar todos os usuários cadastrados\")\n",
        "    print(\"3 - Sair do sistema\")\n",
        "\n",
        "def cadastrar_usuario():\n",
        "    nome = input(\"Digite o nome do usuário: \")\n",
        "    while True:\n",
        "        idade_str = input(\"Digite a idade do usuário: \")\n",
        "        if idade_str.isdigit():\n",
        "            idade = int(idade_str)\n",
        "            break\n",
        "        else:\n",
        "            print(\"Idade inválida! Por favor, digite um número inteiro.\")\n",
        "    return {\"nome\": nome, \"idade\": idade}\n",
        "\n",
        "def listar_usuarios(lista):\n",
        "    if not lista:\n",
        "        print(\"Nenhum usuário cadastrado.\")\n",
        "    else:\n",
        "        print(\"Lista de usuários cadastrados:\")\n",
        "        for i, usuario in enumerate(lista, start=1):\n",
        "            print(f\"{i} - Nome: {usuario['nome']}, Idade: {usuario['idade']}\")\n",
        "\n",
        "def sistema():\n",
        "    usuarios = []\n",
        "    while True:\n",
        "        mostrar_menu()\n",
        "        opcao = input(\"Escolha os números de 1 até 3: \")\n",
        "\n",
        "        if opcao == \"1\":\n",
        "            usuario = cadastrar_usuario()\n",
        "            usuarios.append(usuario)\n",
        "            print(\"Usuário cadastrado com sucesso!\")\n",
        "        elif opcao == \"2\":\n",
        "            listar_usuarios(usuarios)\n",
        "        elif opcao == \"3\":\n",
        "            print(\"Saindo do sistema. Até logo!\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Opção inválida. Por favor, escolha 1, 2 ou 3.\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    sistema()"
      ]
